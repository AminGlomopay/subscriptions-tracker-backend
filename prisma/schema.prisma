generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
  invoices  Invoice[]
}

model Employee {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
}

model CostHead {
  id       Int       @id @default(autoincrement())
  name     String
  invoices Invoice[]
}

model Company {
  id       Int               @id @default(autoincrement())
  name     String
  vendors  VendorOnCompany[]
  invoices Invoice[]
}

enum VendorType {
  TECHNICAL_SUBSCRIPTION
  NORMAL_SUBSCRIPTION
  ONE_TIME
  OTHERS
}

enum VendorStatus {
  ACTIVE
  INACTIVE
}

model Vendor {
  id                Int               @id @default(autoincrement())
  name              String
  country           String
  taxId             String            @unique
  isTaxClaimable    Boolean           @default(false)
  vendorType        VendorType
  status            VendorStatus      @default(ACTIVE)
  isScrutVerified   Boolean           @default(false)
  isAgreementSigned Boolean           @default(false)
  companies         VendorOnCompany[]
  invoices          Invoice[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // TODO: Add bank_details JSONB column, vendor documents upload
}

model VendorOnCompany {
  vendor    Vendor  @relation(fields: [vendorId], references: [id])
  vendorId  Int
  company   Company @relation(fields: [companyId], references: [id])
  companyId Int

  @@id([vendorId, companyId])
}

model Invoice {
  id             Int        @id @default(autoincrement())
  invoiceNumber  String
  invoiceDate    DateTime
  invoiceAmount  Int
  taxAmount      Int
  totalAmount    Int
  invoiceDueDate DateTime
  vendorId       Int
  vendor         Vendor     @relation(fields: [vendorId], references: [id])
  costHeadId     Int
  costHead       CostHead   @relation(fields: [costHeadId], references: [id])
  departmentId   Int
  department     Department @relation(fields: [departmentId], references: [id])
  companyId      Int
  company        Company    @relation(fields: [companyId], references: [id])
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // TODO: Add invoice type, status (cancelled), payment details (method, date, status), payment status, mis month, document url

  @@unique([vendorId, invoiceNumber])
}
